---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navigation from "../components/global/Navigation.astro";

import Hero from "../components/landing/Hero.astro";
import SectionOne from "../components/landing/SectionOne.astro";
import SectionTwo from "../components/landing/SectionTwo.astro";
import Footer from "../components/global/Footer.astro";
---

<!---
Use AstroSeo in all the pages you want different Seo than the index page
-->

<BaseLayout>
  <Navigation />
  <Hero />

  <SectionOne />
  <SectionTwo />
  <Footer />
</BaseLayout>


<style>
/* Type your CSS code here. */
div{
  background-color:white;
  text-color:black;
}
/* Type your CSS code here. */

div {
  -webkit-filter: invert(100%);
  -moz-filter: invert(100%);
  -o-filter: invert(100%);
  -ms-filter: invert(100%);
  filter: invert(100%);
}

*::shadow {
  color: inherit;
}

img,

footer{
  filter: invert(0);
}


.text-slate-500{
  color:rgb(255, 251, 0)
}
  
</style>